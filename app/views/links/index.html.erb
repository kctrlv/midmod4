<%= form_for @link, url: links_path do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, id: "link_title" %>

  <%= f.label :url %>
  <%= f.text_field :url, id: "link_url" %>

  <%= f.submit "Submit", id: "submit_link" %>
<% end %>

<h3>Your Links:</h3>
<div id="links-list">
  <table>
    <% @links.each do |link| %>
      <tr>
        <td class="<%= link.read ? "read" : "unread" %>"><%= link_to link.title, read_link_path(link) %></td>
        <td><%= button_to "Edit", edit_link_path(link), method: :get %></td>
        <td><%= button_to "Delete", link_path(link), method: :delete%></td>
        <% if link.read %>
          <%= link_to "Mark as Unread", mark_as_unread_path(link) %>
        <% else %>
          <%= link_to "Mark as Read", mark_as_read_path(link) %>
        <% end %>
      </tr>
    <% end %>

  </table>
</div>
